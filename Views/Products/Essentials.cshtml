@using Otello.Models
@model ViewModel

@{
    ViewData["Title"] = "Essentials";
}


<div class=" col-12 overflow-hidden">
    <div class="position-relative">
        <div class="product-overlay text d-flex justify-content-center align-items-center">
            <div class="overlay-text-container fit text-center">
                <h1 style="font-size: 45px;" class="">Essentials</h1>
                <h2 >The essentials</h2>
                <a asp-controller="Products" asp-action="Category" asp-route-type="Halloween" class="btn btn-light hero-button"> Shop Now</a>
            </div>

        </div>
        <img style="min-width: 100%; height: 500px; object-fit: cover; object-position: 0% 0%" src="~/assets/Products/Home/test1.png" />
    </div>

    <div class="container-fluid col-10 ">
        <div class="row justify-content-center align-items-center m-5 text-center">
            <h1 class="fw-bold">Shop By Category</h1>
            <div class="product-circle">
                <div class="d-flex justify-content-center">
                    <a asp-controller="Products" asp-action="Category" asp-route-type="School">
                        <img class="" src="~/assets/Products/Essentials/School/bic-pencils1.webp" />
                        <h5 class="text-black text-center">School</h5>
                    </a>
                </div>
            </div>
            <div class="product-circle">
                <div class="d-flex justify-content-center">
                    <a asp-controller="Products" asp-action="Category" asp-route-type="Outdoors">
                        <img class="" src="~/assets/Products/Essentials/Outdoors/tent1.webp" />
                        <h5 class="text-black text-center">Outdoors</h5>
                    </a>
                </div>
            </div>
           
            <div class="product-circle">
                <div class="d-flex justify-content-center">
                    <a asp-controller="Products" asp-action="Category" asp-route-type="Electronics">
                        <img class="" src="~/assets/Products/Essentials/Electronics/tablet1.webp" />
                        <h5 class="text-black text-center">Electronics</h5>
                    </a>
                </div>
            </div>
           


        </div>
        <div class="row justify-content-between align-items-center m-5 text-center ">
            <div class="half-block  bg-danger">
            </div>
            <div class="half-block bg-success ">
            </div>
        </div>
        <div class="row justify-content-center align-items-center m-5 text-center ">
            <div class="full-block  bg-danger">
            </div>

        </div>

    </div>
</div>